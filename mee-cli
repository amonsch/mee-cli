#!/usr/bin/env python

""" Features: Session + REPL """

from prompt_toolkit.shortcuts import PromptSession


def main():
    session = PromptSession(" >>> ")
    while True:
        try:
            stmt = session.prompt()
            print(f"You said: {stmt}")
        except EOFError:
            break


if __name__ == "__main__":
    main()
